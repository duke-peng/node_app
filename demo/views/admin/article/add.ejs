<script src="/xheditor/jquery/jquery-1.11.2.min.js" charset="utf-8"></script>
<script src="/xheditor/xheditor-1.2.2.min.js" charset="utf-8"></script>
<script src="/xheditor/xheditor_lang/zh-cn.js" charset="utf-8"></script>

<%- include ../../public/header.ejs%>



<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">

      <%- include ../../public/aside.ejs%>



    </div>
    <div class="col-sm-10">
      <ol class="breadcrumb">
        <li class="active">用户管理
        </li>
        <li class="active">用户列表
        </li>
      </ol>
      <div class="panel panel-default">

        <div class="panel-heading">
          增加用户　
        </div>
        <div class="panel-body">
          <div class="table-responsive input-form">
            <form action="/admin/article/doAdd" method="post"  enctype="multipart/form-data" >
              <ul>
                <li>  标　　题: <input type="text" name="title"/></li>
                <br>
                <li>  图　　片: <input type="file" name="pic"/></li> <br>
                <li>  作　　者: <input type="text" name="author"/></li> <br>
                <li>  描　　述: <input type="text" name="description"/></li> <br>

                <li>  添加时间: <input type="date" name="addtime"/></li> <br>
                <li>  状　　态: <input type="text" name="status"/></li> <br>


                <li>
                  内　　容:
                  <textarea name="content" id="content" cols="60" rows="8"></textarea>
                </li> <br>

                <li>
                  <br/>
                  <button type="submit" class="btn btn-default">提交</button>
                </li>

              </ul>


            </form>
          </div>
        </div>


      </div>

    </div>
  </div>
</div>
<script>


    $('#content').xheditor({
        html5Upload: false,
        upMultiple: '3',
        tools:'full',
        skin:'default',
        width:500, height:400,
        upImgUrl:"/admin/article/upload",   /*图片的上传地址*/
        upImgExt:"jpg,jpeg,gif,png"
    });

</script>

</body>

</html>