

<%- include ../../public/header.ejs%>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">

      <%- include ../../public/aside.ejs%>

    </div>
    <div class="col-sm-10">
      <ol class="breadcrumb">
        <li class="active">用户管理
        </li>
        <li class="active">用户列表
        </li>
      </ol>
      <div class="panel panel-default">
        <div class="panel-heading">
          搜索
        </div>
        <div class="panel-body">
          <form role="form" class="form-inline">
            <div class="form-group">
              <label for="name">名称</label>
              <input type="text" class="form-control" id="name" placeholder="请输入名称">
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-default">开始搜索</button>
            </div>
          </form>
        </div>
      </div>
      <!--
      列表展示
  -->
      <div class="table-responsive">
        <table class="table table-striped ">
          <thead>
          <tr>
            <th>序号</th>
            <th>标题</th>
            <th>图片</th>
            <th>作者</th>
            <th>描述</th>
            <th>添加时间</th>
            <th>状态</th>
            <th>内容</th>

            <th class="text-center">操作</th>
          </tr>　
          </thead>
          <tbody>

          <%for(var i=0;i<list.length;i++){ %>
          <tr height="40" style="overflow: hidden;">
            <td width="100" height="40" style="overflow: hidden"><%=i+1%></td>
            <td width="100" height="40" style="overflow: hidden"><%=list[i].title%></td>
            <td width="100" height="40" style="overflow: hidden"><img width="50" height="40" src="/<%=list[i].pic%>" alt=""/></td>
            <td width="100" height="40" style="overflow: hidden"><%=list[i].author%></td>
            <td width="100" height="40" style="overflow: hidden;display: block;
    height: 109px;"><%=list[i].description%></td>
            <td width="100" height="40" style="overflow: hidden"><%=list[i].addtime%></td>
            <td width="100" height="40" style="overflow: hidden"><%=list[i].status%></td>
            <td width="100" height="40" style="overflow: hidden;display: block;
    height: 109px;"><%=list[i].content%></td>

            <td class="text-center">

              <a href="/admin/article/edit?id=<%=list[i]._id%>" class="btn btn-success">修改</a>
              　　
              <a href="/admin/article/delete?id=<%=list[i]._id%>" class="btn btn-danger">删除</a>

            </td>
          </tr>

          <%}%>

          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

</body>

</html>